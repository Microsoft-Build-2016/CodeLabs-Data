@model IEnumerable<MSCorp.AdventureWorks.Core.Domain.Product>

@{
    ViewBag.Title = "View";
}
@section HomePageHeader {
    @Html.Partial("_SecondaryHeader")
}
<div class="row">

    <p>
        @*    @Html.ActionLink("Create New", "Create", "Product", new { categoryName="Rugged"}, new {})*@
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", "Product", new { id = item.ProductCode }, null) |
                    @Html.ActionLink("Delete", "Delete", "Product", new { id = item.ProductCode }, null)
                </td>
            </tr>
        }

    </table>
</div>